---
import Layout from '../layouts/BlogPost.astro';
---

<Layout
    title="Sponsorships"
    description="Our valued sponsors"
    pubDate={new Date('August 08 2021')}
    heroImage="/blog-placeholder-sponsor.jpg"
>
    <div style="text-align: center; border-bottom: 1px solid #000;">
        <h1>Our Sponsors</h1>
    </div>
    <div style="text-align: center">
        <a href="/sponsorship_package.pdf" target="_blank">
            <button>View Sponsorship Package</button>
        </a>
        <a href="/sponsorship_package.pdf" download>
            <button>Download Sponsorship Package</button>
        </a>
    </div>
    <div style="text-align: center; border-bottom: 1px solid #000;">
        <h1>Sponsors for 2021</h1>
    </div>
    <div style="text-align: center">
        <a href="/sponsor1_logo.jpg" download>
            <img src="/sponsor1_logo.jpg" alt="Sponsor 1">
        </a>
        <a href="/sponsor2_logo.jpg" download>
            <img src="/sponsor2_logo.jpg" alt="Sponsor 2">
        </a>
        <!-- Add more sponsors as needed -->
    </div>
    <!-- Repeat for each year -->
</Layout>