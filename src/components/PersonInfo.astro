---
// Define the component's props
const { name, image, bio } = Astro.props;
---

<div class="person-info">
    <img src={image} alt={name} />
    <h2>{name}</h2>
    <p>{bio}</p>
</div>

<style>

.person-info {
    width: 200px;
    border: 1px solid #000;
    padding: 10px;
    margin: 10px;
}
.person-info img {
    width: 100%;
    height: auto;
}
</style>